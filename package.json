{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:next dev:styled-system",
    "dev:next": "next dev",
    "dev:styled-system": "panda codegen && panda --watch",
    "prebuild": "npm run styled-system:generate && npm run styled-system:emit",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "styled-system:emit": "panda",
    "styled-system:generate": "panda codegen",
    "styled-system:debug": "panda debug",
    "styled-system:analyze": "panda analyze",
    "icons:generate": "figmage spritesheet --sprite-input ./src/assets/icons --sprite-out-dir ./public --sprite-ids-out-dir ./src/components"
  },
  "dependencies": {
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "16.1.1",
    "@vercel/analytics": "1.6.1",
    "@vercel/og": "0.8.6",
    "@vercel/speed-insights": "1.3.1",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-tweet": "3.3.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@pandacss/dev": "1.8.1",
    "@shikijs/rehype": "3.21.0",
    "@types/mdx": "2.0.13",
    "@types/node": "^22",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.1",
    "figmage": "1.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3"
  }
}
